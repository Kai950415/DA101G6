<h3>資料新增:</h3>

<%-- 錯誤表列 --%>
<c:if test="${not empty errorMsgs}">
	<font style="color:red">請修正以下錯誤:</font>
	<ul>
		<c:forEach var="message" items="${errorMsgs}">
			<li style="color:red">${message}</li>
		</c:forEach>
	</ul>
</c:if>

<FORM METHOD="post" ACTION="post.do" name="form1" enctype="multipart/form-data">
<table>

	<tr>
		<td>會員編號:</td>
		<td><input type="TEXT" name="post_memno" size="45" 
			 value="<%= (PostVO==null)? "ME000001" : PostVO.getPost_memno() %>" /></td>
	</tr>
	
	<tr>
		<td>餐廳名稱:</td>
		<td><input type="TEXT" name="post_res_no" size="45"
			 value="<%= (PostVO==null)? "某餐廳" : PostVO.getPost_res_no()%>" /></td>
	</tr>
	<tr>
		<td>貼文內容:</td>
		<td>
		<textarea name="post_text" cols="42" rows="5"><%= (PostVO==null)? "測試測試測試" : PostVO.getPost_text()%>
		</textarea>
		</td>
	</tr>
	<tr>
		<td>圖片內容:</td>
		<td><input type="FILE" name="post_img" size="45"></td>
		
	</tr>

	
	<tr>
		<td>評分:</td>
		<td><input type="TEXT" name="post_rate" size="45"
			 value="<%= (PostVO==null)? 1 : PostVO.getPost_rate()%>" /></td>
	</tr>




</table>
<br>
<input type="hidden" name="action" value="insert">
<input type="submit" value="送出新增"></FORM>
</body>



